# Okta/OIDC Provider Configuration - Core Settings
OKTA_DOMAIN=your-domain.okta.com                 # Your Okta domain (required)
OKTA_CLIENTID=your-client-id                     # Your Okta client ID (required)
OKTA_CLIENTSECRET=your-client-secret             # Your Okta client secret (required)
EXTERNAL_URL=http://localhost:3000               # Your application's external URL (required)

# Okta/OIDC Provider Configuration - Advanced Settings
# OKTA_AUTH_SERVER_PATH=/oauth2/default          # Default: /oauth2/default
# OKTA_SCOPE=openid email profile                # Default: openid email profile
# OKTA_USE_PKCE=true                             # Default: true (recommended for security)
# OKTA_CALLBACK_PATH=/authn/okta/callback        # Default: /authn/okta/callback
# OKTA_DISCOVERY_TIMEOUT=10000                   # Default: 10000 (10 seconds)
# OKTA_RETRY_DISCOVERY=false                     # Default: false
# OKTA_ENABLE_TOKEN_REFRESH=false                # Default: false
# OKTA_PASS_REQ_TO_CALLBACK=false                # Default: false

# User Profile Mapping
# OKTA_GIVEN_NAME_CLAIM=given_name               # Default: given_name
# OKTA_FAMILY_NAME_CLAIM=family_name             # Default: family_name
# OKTA_REQUIRE_EMAIL_VERIFIED=true               # Default: true (recommended)

# Session and Cookie Configuration
# OKTA_SESSION_MAXAGE=86400000                   # Default: 86400000 (24 hours)
# OKTA_COOKIE_SAMESITE=lax                       # Default: lax (Options: lax, strict, none)
# OKTA_COOKIE_HTTP_ONLY=false                    # Default: false
# OKTA_REDIRECT_AFTER_LOGIN=/                    # Default: / (home page)

# Logging Configuration
# OKTA_LOG_LEVEL=info                            # Not currently implemented

# For Zitadel testing in Docker
# OKTA_DOMAIN=zitadel-heimdall-test:8080
# OKTA_CLIENTID=clientid
# OKTA_CLIENTSECRET=clientsecret

# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=heimdall