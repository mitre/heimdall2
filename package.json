{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "backend": "pnpm --filter heimdall-server",
    "build": "pnpm -r run build",
    "cli": "pnpm --filter @heimdall/cli",
    "common": "pnpm --filter @heimdall/common",
    "cypress-test": "pnpm --filter @heimdall/cypress-tests",
    "frontend": "pnpm --filter @mitre/heimdall-lite",
    "hdf-converters": "pnpm --filter @mitre/hdf-converters",
    "inspecjs": "pnpm --filter inspecjs",
    "lint": "pnpm -r run lint",
    "lint:ci": "pnpm -r run lint:ci",
    "start": "pnpm backend start",
    "start:dev": "dotenv -e ./apps/backend/.env -- pnpm -r --workspace-concurrency=1 run start:dev",
    "docker:up": "docker compose up database -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f database",
    "docker:ps": "docker compose ps",
    "db:create": "pnpm backend sequelize-cli db:create",
    "db:migrate": "pnpm backend sequelize-cli db:migrate",
    "db:seed": "pnpm backend sequelize-cli db:seed:all",
    "db:init": "pnpm db:create && pnpm db:migrate && pnpm db:seed",
    "test:ui": "cypress run",
    "test:ui:open": "cypress open"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/d3-dispatch": "3.0.6",
      "@types/node": "^22.10.7",
      "@types/chroma-js": "2.4.5",
      "chroma-js": "2.4.2",
      "fast-glob": "3.3.3"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "version": "0.0.0"
}
