{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "types": ["jest", "chai", "vuetify", "node"],
    "paths": {
      "@/*": ["src/*"],
      "v-clipboard": ["src/types/v-clipboard/index"]
    },
    "lib": ["ES2019", "dom", "dom.iterable", "scripthost"],
    "alwaysStrict": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules", "public/static/export/"]
}
