{
  "extends": "../../tsconfig.json",
  "include": [
    "*.ts",
    "**/*.ts",
    "types/*.d.ts",
  ],
  "exclude": [
    "lib"
  ],
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "resolveJsonModule": true
  }
}
